<Window
    x:Class="Triggers.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Triggers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <CheckBox
            Name="chkSelect"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Select"
            FontFamily="Verdana"
            FontSize="24" />
        <TextBlock Style="{StaticResource FancyTextBlock}" Text="Moamen Soroor Hello World!!" />
        <TextBlock
            IsEnabled="False"
            Style="{StaticResource FancyTextBlock}"
            Text="Moamen Soroor Hello World!!" />
        <TextBlock
            Margin="10"
            HorizontalAlignment="Center"
            FontFamily="Verdana"
            FontSize="26"
            Text="Moamen Soroor Hello World!!" />
    </StackPanel>
</Window>
