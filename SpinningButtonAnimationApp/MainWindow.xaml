<Window x:Class="SpinningButtonAnimationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpinningButtonAnimationApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnSpinning" Content="Spinning Button"
                MouseEnter="btnSpinning_MouseEnter"  Click="btnSpinning_Click"
                FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Height="80" Width="250" />
    </Grid>
</Window>
