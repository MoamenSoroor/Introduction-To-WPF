<Window x:Class="WpfLayoutManagers.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLayoutManagers"
        mc:Ignorable="d"
        Title="StackPanelWindow" Height="540" Width="600">
    <StackPanel Margin="0">
        <StackPanel.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>
        </StackPanel.Background>
        <Label x:Name="label" Content="Enter Car Info" FontSize="30" Height="60" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="label1" Content="Make" FontSize="25" Height="60"/>
        <TextBox x:Name="textBox" Height="60" TextWrapping="Wrap" FontSize="25" ToolTip="Text Box enter"/>
        <Label x:Name="label2" Content="Color" FontSize="25" Height="60"/>
        <TextBox x:Name="textBox1" Height="60" TextWrapping="Wrap" FontSize="25" ToolTip="Text Box enter"/>
        <Label x:Name="label3" Content="PetName" FontSize="25" Height="60"/>
        <TextBox x:Name="textBox2" Height="60" TextWrapping="Wrap" FontSize="25" ToolTip="Text Box enter"/>
        <Button x:Name="button" Content="Ok" FontSize="25" Height="60"/>
    </StackPanel>

</Window>
