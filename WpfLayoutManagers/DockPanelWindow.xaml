<Window x:Class="WpfLayoutManagers.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLayoutManagers"
        mc:Ignorable="d"
        Title="DockPanelWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Label x:Name="label"  FontSize="35" DockPanel.Dock="Top" Background="DeepSkyBlue" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" UseLayoutRounding="False" BorderBrush="#FFE03030" >Top Panel</Label>
        <Label x:Name="label2" FontSize="35" DockPanel.Dock="Right" Background="Yellow" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" UseLayoutRounding="False" BorderBrush="#FFE03030">Left Panel</Label>
        <Label x:Name="label3" FontSize="35" DockPanel.Dock="Left" Background="YellowGreen" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" UseLayoutRounding="False" BorderBrush="#FFE03030">Right Panel</Label>
        <Label x:Name="label1" FontSize="35" DockPanel.Dock="Bottom" Background="Green" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" UseLayoutRounding="False" BorderBrush="#FFE03030">Bottom Panel</Label>
    </DockPanel>
</Window>
